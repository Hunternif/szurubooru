.post-container
    .post-content.transparency-grid img
        background: url('../img/transparency_grid.png')

    text-align: center
    .post-content
        margin: 0 auto
        position: relative

        .resize-listener
            position: absolute
            left: 0
            right: 0
            top: 0
            bottom: 0
            width: 100%
            height: 100%
        img
            position: relative !important // to center image on small screens
